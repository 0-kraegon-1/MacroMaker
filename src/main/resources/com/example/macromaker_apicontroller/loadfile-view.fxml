<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.macromaker_apicontroller.MacroMaker_API_LoadFileWindowController">
    <bottom>
        <HBox prefWidth="250.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="loadInputField" onAction="#loadTextBoxAction" prefWidth="200.0" />
                <Button mnemonicParsing="false" onAction="#loadTextBoxAction" prefHeight="10.0" prefWidth="55.0" text="Load" />
            </children>
        </HBox>
    </bottom>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <TextArea fx:id="loadFileDisplayArea" editable="false" onMouseClicked="#mouseClicked" prefHeight="200.0" prefWidth="250.0" />
                <TextField fx:id="loadNotificationField" disable="true" editable="false" text="Please input a file name below">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </TextField>
            </children>
        </VBox>
    </center>
</BorderPane>
